<config>
	<sections>
		<ced_csmarketplace>
			<show_in_vendor>1</show_in_vendor>
			<groups>
				<general>
					<fields>
						<activation_vattribute translate="label">
							<label>Enable Vendor Attribute System</label>
							<frontend_type>select</frontend_type>
							<config_path>ced_csvattribute/general/activation</config_path>
							<comment></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
						</activation_vattribute>
					</fields>
				</general>
				<vattribute>
					<label>Vendor Attribute Configuration</label>
					<sort_order>5</sort_order>
					<show_in_website>1</show_in_website>
					<show_in_default>1</show_in_default>
					<show_in_vendor>1</show_in_vendor>
					<fields>
						<allowed_image_type translate="label comment">
							<label>Allowed Image types for Vendor Input</label>
							<frontend_type>textarea</frontend_type>
							<config_path>ced_csvattribute/vattribute/allowed_image_type</config_path>
							<comment>Add more using comma(,) separate.</comment>
							<sort_order>10</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_vendor>1</show_in_vendor>
						</allowed_image_type>
						<allowed_file_type translate="label comment">
							<label>Allowed File types for Vendor Input</label>
							<frontend_type>textarea</frontend_type>
							<config_path>ced_csvattribute/vattribute/allowed_file_type</config_path>
							<comment>Add more using comma(,) separate.</comment>
							<sort_order>20</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_vendor>1</show_in_vendor>
						</allowed_file_type>
					</fields>
				</vattribute>
			</groups>
		</ced_csmarketplace>
	</sections>
</config>