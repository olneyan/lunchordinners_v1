									<rating module="csvendorreview" translate="title">
										<title>Manage Ratings</title>
										<sort_order>20</sort_order>
									</rating>
								</children>		
							</vendorreview>
						</children>
					</csmarketplace>
				</children>
			</admin>
		</resources>
	</acl>
