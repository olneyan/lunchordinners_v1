<config>
	<sections>
	   <mobiconnectadvcart translate="label" module="mobiconnectadvcart">
	       <label>Mobiconnect Advance </label>
	       <tab>mobiconnect</tab>
	       <frontend_type>text</frontend_type>
	       <sort_order>300</sort_order>
	       <show_in_default>1</show_in_default>
	       <show_in_website>1</show_in_website>
	       <show_in_store>1</show_in_store>
			<groups>
				<advancecart translate="label">
				    <label>Enable Advance Product App </label>
				    <frontend_type>text</frontend_type>
				    <sort_order>4</sort_order>
				    <show_in_default>1</show_in_default>
				    <show_in_website>1</show_in_website>
				    <show_in_store>1</show_in_store>
				    <fields>
						<activation translate="label">
							<label>Enable Advance Product System</label>
							<frontend_type>select</frontend_type>
							<comment></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
						</activation>
						<category_name translate="label">
							<label>Show Category Name</label>
							<frontend_type>select</frontend_type>
							<comment></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
						</category_name>
						<autocomplete_enable>
							<label>Enable Auto Complete Search</label>
							<frontend_type>select</frontend_type>
							<comment></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
						</autocomplete_enable>
						<resultnbmr>
							<label>Limit Result</label>
							<frontend_type>text</frontend_type>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Limit number of products suggested</comment>
						</resultnbmr>
                    </fields>
				</advancecart>
			</groups>
		</mobiconnectadvcart>
		<mobiconnect>
			<groups>
				<banners translate="label">
					<fields>
					    <category_banner translate="label">
							<label>Show Banner On Category Page</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</category_banner>
					</fields>
				</banners>
			</groups>
		</mobiconnect>
	</sections>
</config>