<layout version="0.1.0">

    <!--
    Default layout, loads most of the pages
    -->

    <default>
        <!-- Ced_CsMarketplace -->
        <reference name="top.links">
            <action method="addLink" translate="label title" module="csmarketplace" ifconfig="ced_vshops/general/vshoppage_top_enabled">
                <label helper="csmarketplace/getCsMarketplaceTitle"/>
                <url helper="csmarketplace/getCsMarketplaceUrl"/>
                <title helper="csmarketplace/getCsMarketplaceTitle"/>
                <prepare/>
                <urlParams/>
                <position>7</position>
            </action>
            <action method="addLink" translate="label title" module="csmarketplace" ifconfig="ced_vshops/general/vshoppage_vendor_enabled">
                <label helper="csmarketplace/getIAmAVendorTitle"/>
                <url helper="csmarketplace/getVendorUrl"/>
                <title helper="csmarketplace/getIAmAVendorTitle"/>
                <prepare/>
                <urlParams/>
                <position>8</position>
            </action>
            <action method="addLink" translate="label title">
                <label>Help</label>
                <url>help</url>
                <title>Help</title>
                <prepare>true</prepare>
                <urlParams/>
                <position>10</position>
            </action>
        </reference>
        <reference name="header">
            <block type="core/template" name="top.search" as="topSearch" template="csmarketplace/customization/search_form.phtml"/>
        </reference> 
        <reference name="minicart_content">
            <action method="setTemplate">
                <template>csmarketplace/cart/minicart.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/ced/csmarketplace/customization/custom.css</stylesheet>
            </action>
			
        </reference>
        <!--  <reference name="header">
            <block type="core/template" name="top.search" as="topSearch" template="ced/cssearch/search_form.phtml"/>
        </reference> -->
    </default>
    
	
    <!--
    Vendors Shop List
    --> 
    <csmarketplace_vshops_index translate="label">
        <label>CsMarketplace</label>
        <!-- Ced_CsMarketplace_Vshops_Index -->
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/ced/csmarketplace/vendorsearch.css</stylesheet>
            </action>
            <action method="addCss">
                <stylesheet>css/ced/csmarketplace/font-awesome/css/font-awesome.min.css</stylesheet>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="csmarketplace/vshops_list" name="csmarketplace_vshops_list" as="vlist" template="csmarketplace/vshops/list.phtml">
                <block type="checkout/cart_shipping" name="country_filter" as="country_filter" template="csmarketplace/vshops/country_filter.phtml"/>
            </block>
        </reference>
        <reference name="left">
            <remove name="left.newsletter"/>
            <remove name="left.reports"/>
            <remove name="catalog.compare.sidebar" />
            <action method="unsetChild">
                <name>left.permanent.callout</name>
            </action>
            <action method="unsetChild">
                <name>left.reports.product.viewed</name>
            </action>
            <action method="unsetChild">
                <name>tags_popular</name>
            </action>
            <action method="unsetChild">
                <name>cart_sidebar</name>
            </action>
            <action method="unsetChild">
                <name>wishlist</name>
            </action>
            <action method="unsetChild">
                <name>sale.reorder.sidebar</name>
            </action>
            <action method="unsetChild">
                <name>left.poll</name>
            </action>
            <block type="csmarketplace/layer_view"  name="vshop.fgroup.filter.view" template="csmarketplace/layer/view.phtml"/>
        </reference>
       
    </csmarketplace_vshops_index>
    
