        </reference>
        <reference name="left">
            <remove name="left.newsletter"/>
            <remove name="left.reports"/>
            <remove name="catalog.compare.sidebar" />
            <action method="unsetChild">
                <name>left.permanent.callout</name>
            </action>
            <action method="unsetChild">
                <name>left.reports.product.viewed</name>
            </action>
            <action method="unsetChild">
