                $curTime = Mage::getModel('core/date')->date('H:i');

                if ($showNow == "Yes") {
                    $j = 0;
                } elseif ($showNow == "No" && $curTime < '12:00') {
                    $j = 0;
                } else {
                    $j = 1;
                }
                for ($i = $j; $i < $j + 7; $i ++) {
                    ?>
                    <option>
                        <?php
                        $m = date("m"); // Month value

                        $de = date("d"); // today's date

                        $y = date("Y"); // Year value

                        echo strtoupper(date('d-m-y:D', mktime(0, 0, 0, $m, ($de + $i), $y)));
                        ?>
                    </option>
        <?php
    }
