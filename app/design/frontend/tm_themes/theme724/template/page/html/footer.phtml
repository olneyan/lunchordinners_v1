                jQuery(this).toggleClass('active');
                if (jQuery(this).siblings('.footer-col-content').hasClass('open')) {
                    jQuery('.footer-col-content').slideUp();
                    jQuery('.footer-col-content').removeClass('open');
                } else {
                    jQuery('.footer-col-content').slideUp();
                    jQuery(this).siblings('.footer-col-content').slideToggle('slow');
                    jQuery(this).siblings('.footer-col-content').addClass('open');
                }
            });
        }
        jQuery(window).resize(function () {
            footersocialshare();
        });
        footersocialshare();
    });
    function footersocialshare() {
        var ww1 = jQuery(window).width();
        if (ww1 < 768) {
            jQuery('.social-icons').appendTo('.footer-share-social');
        }
    }
</script>
